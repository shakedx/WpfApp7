<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="Pistol" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" Margin="10">
            <Button Content="Print" Margin="0,10,5,25" Click="Button_Click"/>
            <Button Content="Print after pop" Margin="0,10,5,25" Click="Button_Click_1"/>
            <Button Content="Find max string" Margin="0,10,5,25" Click="Button_Click_2"/>
            <Label Content="Stackoverview" HorizontalAlignment="Center"/>
            <TextBlock x:Name="overview" Width="300" HorizontalAlignment="Center"/>
            <Label Content="Stackmaxstring" HorizontalAlignment="Center"/>
            <TextBlock x:Name="maxstring" Width="300"/>
        </StackPanel>

    </Grid>
</Window>
